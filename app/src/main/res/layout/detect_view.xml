<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetectingView" android:orientation="vertical">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="동선 인식"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tv_detect_mode" android:layout_weight="1"
                android:layout_marginTop="60dp" android:textSize="30sp" android:gravity="center"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/person_detect"
                android:id="@+id/iv_mode_pic"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="10">
        <Button
                android:text="사람 감지"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="707dp"
                tools:layout_editor_absoluteX="79dp" android:id="@+id/btn_mode" android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>