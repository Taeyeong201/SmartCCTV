<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_height="match_parent"
                                             android:layout_width="match_parent">


	<ImageView
			android:layout_width="170dp"
			android:layout_height="0dp" app:srcCompat="@drawable/moving_detect"
			android:id="@+id/iv_thumbnail"
			android:layout_marginTop="7dp"
			android:layout_marginBottom="1dp" app:layout_constraintBottom_toTopOf="@+id/tv_s_no"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginLeft="6dp" android:layout_marginStart="6dp"/>
	<TextView
			android:text="S_no : "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/iv_thumbnail"
			android:layout_marginTop="134dp"/>
	<TextView
			android:text="TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tv_s_no"
			app:layout_constraintBottom_toTopOf="@+id/tv_rc_date" app:layout_constraintStart_toEndOf="@+id/textView"
			android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
	<TextView
			android:text="TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/tv_rc_date"
			app:layout_constraintStart_toStartOf="@+id/textView" android:layout_marginTop="1dp"
			app:layout_constraintTop_toBottomOf="@+id/textView"/>
</android.support.constraint.ConstraintLayout>

